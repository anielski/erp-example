{% extends "base.html.twig" %}

{% block title %}
    Task
{% endblock %}

{% block body %}
    <h1>List of tasks for project where percent tasks is 50% and from last month.</h1>
    {% if tasks %}
        <table class="table table-striped" id="tasks">
            <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Priority</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.name }}</td>
                    <td>{{ task.date|date('Y-m-d') }}</td>
                    <td>{{ task.priority }}</td>
                    <td><a href="/task/{{ task.id }}" class="nav-link">show</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
        {{ knp_pagination_render(tasks) }}
        </div>
    {% else %}
        <p>no tasks</p>
    {% endif %}
{% endblock %}